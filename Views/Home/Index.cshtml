@{
    ViewData["Title"] = @Localizer["Home Page"];
}
<div class="hidden">
    <!--// these are used to define value of data-interval attribute for banner carousel and image carousel-->
    <input type="hidden" id="bannerDataInterval" value="@ViewData["BannerDataInterval"]" />
    <input type="hidden" id="imageDataInterval" value="@ViewData["ImageDataInterval"]" />
</div>
    <!-- background animation works with AnimationControl.ts script and 
    'animated' css class from animate.css, included the snippet into SiteAnimation.scss -->
<div id="bannerCarousel" class="carousel slide" data-ride="carousel" >
    <div class="carousel-inner" role="listbox" >
        <div class="img-box-fullscreen item active" >
            @await Component.InvokeAsync("StaticImage", new { 
                path=@"wwwroot/Images", fileIndex= @ImageIndexs.Banner1_1920X1080, imageOnly= "true", 
                animated= "true", background="true"
            })
            
            <div class="carousel-caption" role="option">
                <!--<p>-->
                    <!--// TODO: ADD custom template with popular product...-->
                    <!--Learn ...-->
                    <!--http://www.freepik.com/free-vector/coming-soon-web-page-template_719104.htm-->
                    <!--<a class="btn btn-default" href="">
                        Learn More
                    </a>-->
                <!--</p>-->
            </div>
        </div>
        <div class="img-box-fullscreen item">
            @await Component.InvokeAsync("StaticImage", new { 
                path=@"wwwroot/Images", fileIndex= @ImageIndexs.Banner2_1920X1080, imageOnly= "true", 
                animated= "true", background="true"
            })
             <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="img-box-fullscreen item" >
            @await Component.InvokeAsync("StaticImage", new { 
                path=@"wwwroot/Images", fileIndex= @ImageIndexs.Banner3_1920X1080, imageOnly= "true", 
                animated= "true", background="true"
            })
            
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="img-box-fullscreen item">
            @await Component.InvokeAsync("StaticImage", new { 
                path=@"wwwroot/Images", fileIndex= @ImageIndexs.Banner4_1920X1080, imageOnly= "true", 
                animated= "true", background="true"
            })
            <div class="carousel-caption" role="option">
            </div>
        </div>
    </div>
    
</div>
<div class="col-md-12 content-section" style="top: 0;">
    <div class="col-md-12 content-section-1 zero">
        <div class="col-md-3 col-xs-1 hidden-full-width" >
            <!--Left Panel-->
        </div>
        <div class="col-md-6 col-xs-10 col-full-width text-center" >
            <!--Main Panel-->
        </div>
        <div class="col-md-3 col-xs-1 hidden-full-width text-right" >
            <!--Right Panel-->
        </div>
    </div>
</div>
