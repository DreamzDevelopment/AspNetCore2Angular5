    </div>
</div>
<div class="my-row content-section" >
    <div class="col-md-12 content-section-1 second">
        <div class="col-md-6 col-xs-6 col-full-width panel-box p1">
        </div>
        <div class="col-md-6 col-xs-6 col-full-width panel-box p2">
           
        </div>
    </div>
</div>
<div class="my-row content-section" >
    <div class="col-md-12 content-section-1 third" >
        <h1>@ViewData["Welcome2"]</h1>
        <h2>This is last section</h2>
    </div>
</div>

<div id="footerMenu" class="col-md-12 footer-menu">
    @await Html.PartialAsync("_FooterMenu")
</div>


@section Scripts {
    <environment include="Development">
    </environment>
    <environment exclude="Development">
    </environment>
    <script type="text/javascript">
            $('img.lazy, div.lazy').lazyload({ 
                threshold: 10, 
                skip_invisible : true 
            });
    
            $('#bannerCarousel, #pn_1_Carousel, #pn_2_Carousel, #pn_3_Carousel, #pn_4_Carousel').on('slid.bs.carousel', function(){
                $(this).find('img.lazy, div.lazy').lazyload({
                    threshold : 10, // set pixels in screen to start loading image..
                    //event : 'lazy-img', // Event to Trigger Loading..
                    //container: $('#pn_1_Carousel')
                    // effect : "fadeIn" // animation of loading image..
                    skip_invisible : true 
            });
        });
        window.onload = async () => {
            console.log('Window On load from Index.Html');
        };
    </script>
}